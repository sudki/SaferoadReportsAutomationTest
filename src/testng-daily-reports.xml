<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Daily Reports Suite" parallel="false">

    <!-- ✅ Allure Listener -->
    <listeners>
        <listener class-name="io.qameta.allure.testng.AllureTestNg"/>
    </listeners>

    <!-- مجموعة اختبارات التقارير -->
    <test name="Reports">

        <classes>
            <!-- Trip Report -->
            <class name="Tests.TripReportTest"/>

            <!-- WHM Reports -->
            <class name="Tests.WHM_Reports"/>

            <!-- Speed Report (معطّل حالياً)
            <class name="Tests.SpeedReportTest"/>
            -->
        </classes>

    </test>

</suite>
